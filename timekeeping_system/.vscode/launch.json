{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Excel API",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/a2a_structure/host_agent/__main__.py",
      // "program": "${workspaceFolder}/app/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "VIRTUAL_ENV": "${workspaceFolder}\\.venv",
        "PATH": "${workspaceFolder}\\.venv\\Scripts;${env:PATH}"
      }
    },
    {
      "name": "Debug Host Agent",
      "type": "python",
      "request": "launch",
      "module": "a2a_structure.host_agent",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug with uv run",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/a2a_demo/agents/employee_agent_adk/__main__.py",
      "console": "integratedTerminal",
      "env": {
        "UV_ACTIVE": "1"
      }
    }
  ]
}
